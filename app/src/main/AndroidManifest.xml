        <activity
            android:name="com.helloalfred.view.ui.account_type.AccountTypeActivity"
            android:exported="false" />
        <activity
            android:name="com.helloalfred.view.ui.app_intro.AppIntroActivity"
            android:exported="false" />
        <activity
            android:name="com.helloalfred.view.ui.dashboard.DashboardActivity"
            android:exported="false" />
        <activity
            android:name="com.helloalfred.view.ui.splashscreen.SplashscreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
